{% for post in pagination %}
    <div class="row">
        <div class="col-12">
            <h2><a href="{{ path('post_detail', {'slug': post.slug}) }}">{{ post.title }}</a></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            Published: {{ post.createdAt.format('d/m/Y') }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p>{{ post.text|raw }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p><a href="{{ path('post_detail', {'slug': post.slug}) }}">Open article &gt;</a></p>
        </div>
    </div>
{% endfor %}

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>